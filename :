import pygame

pygame.init()
SCREEN_WIDTH = 640
SCREEN_HEIGHT = 480
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))

HALF_SCREEN_WIDTH, HALF_SCREEN_HEIGHT = (
    screen.get_width() / 2,
    screen.get_height() / 2,
)

BACKGROUND = (32, 64, 16)

clock = pygame.time.Clock()
MAX_FPS = 60
running = True

player_x, player_y = (
    HALF_SCREEN_WIDTH,
    HALF_SCREEN_HEIGHT,
)

while running:
    screen.fill(BACKGROUND)
    pygame.display.flip()
    for event in pygame.event.get():
        if event.type != pygame.KEYDOWN:
            continue
        if event.key == pygame.K_ESCAPE:
            running = False
    print(event.key)
    clock.tick(MAX_FPS)


pygame.quit()
